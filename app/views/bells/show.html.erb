<%- model_class = Bell -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bell.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zone) %>:</strong></dt>
  <dd><%= @bell.zone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_location) %>:</strong></dt>
  <dd><%= @bell.file_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:file_size) %>:</strong></dt>
  <dd><%= @bell.file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:broadcast_time) %>:</strong></dt>
  <dd><%= @bell.broadcast_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:singer) %>:</strong></dt>
  <dd><%= @bell.singer %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bells_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bell_path(@bell), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bell_path(@bell),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
